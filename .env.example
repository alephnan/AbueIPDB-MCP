# AbuseIPDB MCP Server Configuration

# Required: Your AbuseIPDB API key
# Get one at: https://www.abuseipdb.com/api
ABUSEIPDB_API_KEY=your_api_key_here

# API Configuration
ABUSEIPDB_BASE_URL=https://api.abuseipdb.com/api/v2

# Request Configuration
MAX_AGE_DAYS=30
CONFIDENCE_THRESHOLD=75
BLACKLIST_CONFIDENCE_MIN=90

# Rate Limiting (AbuseIPDB free tier default: 1000/day)
DAILY_QUOTA=1000
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Cache Configuration
CACHE_DB_PATH=./cache.db
CACHE_DEFAULT_TTL=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
# Set to true to allow checking private IP addresses (not recommended for production)
ALLOW_PRIVATE_IPS=false